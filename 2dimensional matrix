m*n matrix program
source code:
int main() {
    // Write C code here
    int m,n;
    scanf("%d%d",&m,&n);
    int a[m][n];
    
    int i,j;
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    
    
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d ",a[i][j]);
        }
        printf("\n");
            
        
    }

    return 0;
}




read m*n matrix and print sum of the matrix
source code:
int main() {
    // Write C code here
    int m,n;
    scanf("%d%d",&m,&n);
    int a[m][n];
    int s=0;
    int i,j;
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    
    
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            s=s+a[i][j];
        
        }
        printf("%d",s);
        printf("\n");
            
        
    }
    
    return 0;
}
output:
2
3
1
2
3
4
5
6
6
21

read n*n matrix  and print sum of diagonal matrix:
source code:
#include <stdio.h>

int main() {
    // Write C code here
    int n;
    scanf("%d",&n);
    int a[n][n];
    int s=0;
    int i,j;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(i==j)
            s=s+a[i][j];
        }
        printf("\n");
    }
     printf("%d",s);
    
    return 0;
}

read n*n matrix and print sum of diagonal elements
source code:
int main() {
    // Write C code here
    int n;
    scanf("%d",&n);
    int a[n][n];
    int s=0;
    int i,j;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if(i+j==n-1)
            s=s+a[i][j];
        }
        printf("\n");
    }
     printf("%d",s);
    
    return 0;
}
output:
3
1
2
3
4
5
6
7
8
9
15
